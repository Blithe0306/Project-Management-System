<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-lazy-init="true">

	<!-- admin log  -->
	<bean id="adminLogServ" parent="_baseTransactionProxy">
		<property name="target">
			<bean
				class="com.ft.otp.manager.logs.adminlog.service.impl.AdminLogServImpl">
				<property name="adminLogDao">
					<bean
						class="com.ft.otp.manager.logs.adminlog.dao.impl.AdminLogDaoImpl"
						parent="_baseSqlMapClientTarget">
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<!-- user log -->
	<bean id="userLogServ" parent="_baseTransactionProxy">
		<property name="target">
			<bean
				class="com.ft.otp.manager.logs.userlog.service.impl.UserLogServImpl">
				<property name="userLogDao">
					<bean
						class="com.ft.otp.manager.logs.userlog.dao.impl.UserLogDaoImpl"
						parent="_baseSqlMapClientTarget">
					</bean>
				</property>
			</bean>
		</property>
	</bean>

</beans>
