<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<include file="struts-base.xml" />

	<package name="webapp-authmgr" extends="webapp-base">

		<!-- ServerAction -->
		<action name="authServer" class="serverAction">
			<result name="success">
				/manager/authmgr/server/list.jsp
			</result>
			<result name="find">/manager/authmgr/server/add.jsp</result>
			<result name="view">
				/manager/authmgr/server/view.jsp
			</result>
			<result name="sel_agent">
				/manager/authmgr/agent/sel_servers.jsp
			</result>
		</action>

		<!-- AgentConfAction -->
		<action name="agentConf" class="agentConfAction">
			<result name="edit">
				/manager/authmgr/agentconf/add.jsp
			</result>
		</action>
		
		<!-- AgentAction -->
		<action name="authAgent" class="agentAction">
			<result name="success">
				/manager/authmgr/agent/list.jsp
			</result>
			<result name="find">/manager/authmgr/agent/add.jsp</result>
			<result name="view">/manager/authmgr/agent/view.jsp</result>
			<result name="unbind_serv">
				/manager/authmgr/agent/unbind_serv.jsp
			</result>
		</action>
		
		<!-- BackendAction -->
		<action name="backendAuth" class="backendAction">
			<result name="success">
				/manager/authmgr/backend/list.jsp
			</result>
			<result name="edit">
				/manager/authmgr/backend/add.jsp
			</result>
			<result name="view">
				/manager/authmgr/backend/view.jsp
			</result>
		</action>

	</package>

</struts>