<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-lazy-init="true">
	<!-- dao info -->
	<bean id="reportDao" parent="_baseSqlMapClientTarget" class="com.ft.otp.manager.report.dao.impl.ReportDaoImpl"></bean>
	<!-- operation report -->
	<bean id="operationReportServ" parent="_baseTransactionProxy">
		<property name="target" >
			<bean
				class="com.ft.otp.manager.report.service.operationreport.impl.OperationReportServImpl">
				<property name="reportDao" ref="reportDao"/>
			</bean>
		</property>
	</bean>
	<!-- user report -->
	<bean id="userReportServ" parent="_baseTransactionProxy">
		<property name="target" >
			<bean
				class="com.ft.otp.manager.report.service.userreport.impl.UserReportServImpl">
				<property name="reportDao" ref="reportDao"/>
			</bean>
		</property>
	</bean>
	<!-- token report -->
	<bean id="tokenReportServ" parent="_baseTransactionProxy">
		<property name="target" >
			<bean
				class="com.ft.otp.manager.report.service.tokenreport.impl.TokenReportServImpl">
				<property name="reportDao" ref="reportDao"/>
			</bean>
		</property>
	</bean>
</beans>
