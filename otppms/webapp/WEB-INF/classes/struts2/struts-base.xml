<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<include file="struts-default.xml" />

	<package name="webapp-base" extends="struts-default">

		<interceptors>
			<!-- Interceptor -->
			<interceptor name="baseInter"
				class="com.ft.otp.core.interceptor.BaseInterceptor">
			</interceptor>
			<interceptor name="permInter"
				class="com.ft.otp.core.interceptor.PermInterceptor">
			</interceptor>
			<interceptor name="actionLogInter"
				class="com.ft.otp.core.interceptor.ActionLogInterceptor">
			</interceptor>
			<interceptor-stack name="myStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="baseInter" />
				<interceptor-ref name="permInter"/>
				<interceptor-ref name="actionLogInter">
					<!-- intercepted method -->
					<param name="includeMethods">
						modifyDefaultDomain,modify,dbConnTest,add,unBindAS,selServer,delete,downLoadIni,importToken,onLineDistribute,offLineActivate,moveOrgunit,exportUser,bak,bakConfig,upLic,modifyBase,onLineDist,twoCodeActive
					</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="myStack" />
		
		<!-- 定义全局处理结果 -->
		<global-results>
			<result name="relogin">/login/login.jsp</result>
			<result name="error" >/error.jsp</result>
			<result name="urlerror">/error.jsp?errcode=404</result>
			<result name="none">/error.jsp?errcode=707</result>
			<result name="exception">/error.jsp</result>
		</global-results>

		<!-- <global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
			result="exception" />
			</global-exception-mappings> -->

	</package>

</struts>